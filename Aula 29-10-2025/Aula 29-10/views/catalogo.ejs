<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= tituloDaPagina %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            margin-bottom: 30px;
            text-align: center;
        }
        
        .header h1 {
            color: #667eea;
            font-size: 2.5em;
            margin-bottom: 10px;
        }
        
        .produtos-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .produto-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }
        
        .produto-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        }
        
        .produto-nome {
            font-size: 1.5em;
            color: #333;
            margin-bottom: 10px;
            font-weight: bold;
        }
        
        .produto-id {
            font-size: 0.9em;
            color: #999;
            margin-bottom: 15px;
        }
        
        .produto-preco {
            font-size: 1.8em;
            color: #28a745;
            font-weight: bold;
            margin-bottom: 10px;
        }
        
        .produto-estoque {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            margin-bottom: 15px;
        }
        
        .estoque-disponivel {
            background: #d4edda;
            color: #155724;
        }
        
        .estoque-baixo {
            background: #fff3cd;
            color: #856404;
        }
        
        .estoque-indisponivel {
            background: #f8d7da;
            color: #721c24;
        }
        
        .produto-slug {
            font-size: 0.85em;
            color: #6c757d;
            margin-bottom: 20px;
            font-style: italic;
        }
        
        .acoes {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }
        
        .btn {
            flex: 1;
            padding: 10px 15px;
            border: none;
            border-radius: 8px;
            font-size: 0.95em;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            display: inline-block;
        }
        
        .btn-detalhes {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .btn-detalhes:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        
        .btn-excluir {
            background: #dc3545;
            color: white;
        }
        
        .btn-excluir:hover {
            background: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4);
        }
        
        .btn-excluir:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        
        .empty-state {
            background: white;
            padding: 60px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
        }
        
        .empty-state h2 {
            color: #667eea;
            margin-bottom: 10px;
        }
        
        /* Toast de notificaÃ§Ã£o */
        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: 8px;
            color: white;
            font-weight: bold;
            box-shadow: 0 5px 20px rgba(0,0,0,0.3);
            z-index: 1000;
            animation: slideIn 0.3s ease;
        }
        
        .toast-success {
            background: #28a745;
        }
        
        .toast-error {
            background: #dc3545;
        }
        
        @keyframes slideIn {
            from {
                transform: translateX(400px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><%= tituloDaPagina %></h1>
        </div>
        
        <% if (listaDeProdutos && listaDeProdutos.length > 0) { %>
            <div class="produtos-grid">
                <% listaDeProdutos.forEach(produto => { %>
                    <div class="produto-card" id="produto-<%= produto.id %>">
                        <div class="produto-nome"><%= produto.nome %></div>
                        <div class="produto-id">ID: <%= produto.id %></div>
                        <div class="produto-preco">R$ <%= produto.preco.toFixed(2) %></div>
                        
                        <% if (produto.estoque > 10) { %>
                            <span class="produto-estoque estoque-disponivel">
                                âœ“ <%= produto.estoque %> em estoque
                            </span>
                        <% } else if (produto.estoque > 0) { %>
                            <span class="produto-estoque estoque-baixo">
                                âš  Apenas <%= produto.estoque %> restantes
                            </span>
                        <% } else { %>
                            <span class="produto-estoque estoque-indisponivel">
                                âœ— IndisponÃ­vel
                            </span>
                        <% } %>
                        
                        <% if (produto.slug) { %>
                            <div class="produto-slug">/<%= produto.slug %></div>
                        <% } %>
                        
                        <div class="acoes">
                            <a href="/produtos/<%= produto.id %>" class="btn btn-detalhes">
                                Ver Detalhes
                            </a>
                            <button 
                                class="btn btn-excluir" 
                                onclick="excluirProduto('<%= produto.id %>', '<%= produto.nome %>')">
                                ðŸ—‘ Excluir
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h2>Nenhum produto cadastrado</h2>
                <p>Adicione produtos para comeÃ§ar!</p>
            </div>
        <% } %>
    </div>

    <script>
        // FunÃ§Ã£o para excluir produto via fetch (API)
        async function excluirProduto(id, nome) {
            // ConfirmaÃ§Ã£o
            if (!confirm(`Tem certeza que deseja excluir o produto "${nome}"?`)) {
                return;
            }
            
            // Desabilita o botÃ£o durante a requisiÃ§Ã£o
            const botao = event.target;
            botao.disabled = true;
            botao.textContent = 'Excluindo...';
            
            try {
                const response = await fetch(`/api/produtos/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const resultado = await response.json();
                
                if (resultado.sucesso) {
                    // Remove o card do produto da tela com animaÃ§Ã£o
                    const card = document.getElementById(`produto-${id}`);
                    card.style.transition = 'all 0.3s ease';
                    card.style.opacity = '0';
                    card.style.transform = 'scale(0.8)';
                    
                    setTimeout(() => {
                        card.remove();
                        
                        // Verifica se nÃ£o hÃ¡ mais produtos
                        const grid = document.querySelector('.produtos-grid');
                        if (grid && grid.children.length === 0) {
                            location.reload(); // Recarrega para mostrar mensagem de lista vazia
                        }
                    }, 300);
                    
                    // Mostra notificaÃ§Ã£o de sucesso
                    mostrarToast('Produto excluÃ­do com sucesso!', 'success');
                } else {
                    throw new Error(resultado.mensagem || 'Erro ao excluir produto');
                }
            } catch (error) {
                console.error('Erro:', error);
                mostrarToast('Erro ao excluir produto: ' + error.message, 'error');
                botao.disabled = false;
                botao.textContent = 'ðŸ—‘ Excluir';
            }
        }
        
        // FunÃ§Ã£o para mostrar notificaÃ§Ã£o toast
        function mostrarToast(mensagem, tipo) {
            const toast = document.createElement('div');
            toast.className = `toast toast-${tipo}`;
            toast.textContent = mensagem;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideIn 0.3s ease reverse';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }
    </script>
</body>
</html>